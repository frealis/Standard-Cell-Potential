<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/header.ejs %>

    <!-- JavaScript -->
    <% include ../partials/keepSelection.ejs %>

    <title>Cell Potential - test.ejs</title>
  </head>
    <% include ../partials/nav.ejs %>

  <body>
    <div class="container text-center mt-3 mb-5">
      <form method="POST" action="/test" onsubmit="return validateForm()">
        <div class="row">
          <!-- Image, periodic table, & drop-down menus -->
          <div class="col-md table-responsive noselect">
            <!-- <img src="battery-galvanic-03.png" class="mw-100"> -->

            <div class="container mb-3">
              <div class="row">
                <div class="col-md">
                  <% include ../partials/periodicTable.ejs %>

                  <div class="container">
                    <div class="row">
                      <div class="col-md-6 white-text-focus">
                        <span class="cell-x">Cell X</span>
                        <select id="elements_x" name="input_x" class="input form-control bg-dark selectable" onchange="updatePeriodicTable_x();"> 
                          <% include ../partials/elementOptions.ejs %>
                        </select>
                      </div>  

                      <div class="col-md-6 white-text-focus">
                        <span class="cell-y">Cell Y</span>
                        <select id="elements_y" name="input_y" class="input form-control bg-dark selectable" onchange="updatePeriodicTable_y();"> 
                          <% include ../partials/elementOptions.ejs %>
                        </select>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="col-md">
                  <p>
                    <h6 style="text-align: left">Instructions:</h6>
                    <ol style="text-align: left">
                      <li>Select an element for <span class="cell-x">Cell X</span> by clicking on a highlighted symbol in the periodic table or by choosing one from the drop-down menu below
                      <li>Select an element for <span class="cell-y">Cell Y</span> in the same way</li>
                      <li>Click the <span class="submit">Submit</span> button to view the results</li>
                    </ol>
                  </p>

                  <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Submit</button>

                  <div id="sea" class="alert alert-warning mt-3">
                    Please select an element for Cell X and Cell Y before submitting.
                  </div>
                </div>
            
              </div>
            </div>

          </div>
        </div>
      </form>

    </div>

    <!-- Results -->
    <div class="container pb-5">
      <div class="row">
        <div class="col-md-4 py-2">
          <h6 class="cell-x text-center">Cell X</h6>
          <ul id="ul_x" class="list-group text-left">
           <% include ../partials/cellXData.ejs %>
          </ul>
        </div>
        <div class="col-md-4 py-2">
          <h6 class="cell-y text-center">Cell Y</h6>
          <ul class="list-group text-left">
           <% include ../partials/cellYData.ejs %>
          </ul>
        </div>
        <div class="col-md-4 py-2">
          <h6 class="submit text-center">Results</h6>
          <ul class="list-group text-left">
            <% include ../partials/cellResults.ejs %>
          </ul>
        </div>
      </div>

      <img src="battery-galvanic-03.png" class="mw-100">
      <% include ../partials/footer.ejs %>
  </body>
</html>